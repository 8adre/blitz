    "hooks": {
      "pre-commit": "lint-staged && pretty-quick --staged",
      "pre-push": "yarn lint",
      "post-rebase": "yarn install"
    }
  },
  "lint-staged": {
    "*.{js,ts,tsx}": [
      "eslint --fix"
    ]
  },
  "resolutions": {
    "jest": "26.6.3",
    "@types/react": "16.9.55",
